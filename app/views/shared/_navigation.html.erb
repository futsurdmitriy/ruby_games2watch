<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">
        games2watch
        <% if session[:user_id] %>
            | <%= User.find(session[:user_id]).first_name %>
        <% end %>
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <%= link_to "Home", root_path, {class: "p-2 text-dark"} %>
        <%= link_to "Games", free_games_path_url, {class: "p-2 text-dark"} %>
        <%= link_to "News", free_news_path_url, {class: "p-2 text-dark"} %>
        <%= link_to "About", about_us_path, {class: "p-2 text-dark"} %>
        <%= link_to "Contact", contact_us_path, {class: "p-2 text-dark"} %>
    </nav>
    <% if session[:user_id] %>
        <%= link_to "Logout", log_out_path, {class: "btn btn-outline-primary"} %>
    <% else %>
        <%= link_to "Sign in", sign_in_path, {class: "btn btn-outline-primary"} %>
    <% end %>
</div>