<% content_for(:title, "Users") %>
<h2>Users List</h2>
<table>
    <thead>
    <tr>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Password</td>
        <td>Role</td>
        <td>Created At</td>
        <td>Updated At</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.password_digest %></td>
                <td><%= user.role %></td>
                <td><%= user.created_at.strftime('%Y-%m-%d %T') %></td>
                <td><%= user.updated_at.strftime('%Y-%m-%d %T') %></td>
                <td>
                    <a href="/admin/users/<%= user.id %>">Show</a> |
                    <a href="/admin/users/<%= user.id %>/edit">Update</a> |
                    <a href="/admin/users/<%= user.id %>" data-method="delete" data-confirm="Are you sure?">Delete</a>
                </td>
            </tr>
        <% end %>
        <tr>
            <td><a href="/admin/users/new">Create user</a></td>
        </tr>
    </tbody>
</table>
